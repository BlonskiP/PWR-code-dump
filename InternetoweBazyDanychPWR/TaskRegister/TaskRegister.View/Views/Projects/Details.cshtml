@model TaskRegiser.Core.Entities.Project
@using TaskRegiser.Core.Entities
@using Microsoft.AspNetCore.Identity
@using TaskRegiser.Core
@inject SignInManager<Employee> signInManager
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectManager)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectManager.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
    </dl>
</div>
<div>
    @if (signInManager.IsSignedIn(User) && User.IsInRole(RolesResource.Admin))
    {
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
        <a asp-action="Index">Back to All Projects List</a>
    }
    <a asp-action="GetUserProjects">Back to List</a>
</div>

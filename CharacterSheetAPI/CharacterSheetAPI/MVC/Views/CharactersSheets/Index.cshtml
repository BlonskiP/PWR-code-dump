@model IEnumerable<DbManager.CORE.Models.CharactersSheets>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Money)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Approved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventIdFkNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerIdFkNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Money)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Approved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventIdFkNavigation.EventDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerIdFkNavigation.AspUserIdFk)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SheetId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SheetId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SheetId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
